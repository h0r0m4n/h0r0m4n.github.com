{% if testimonials %}
    <section id="testimonials" class="testimonials t__section">
        <div class="t__container">
            <h2>Testimonials</h2>
            <ul class="testimonials__items">
                {% for testimonial in testimonials %}
                    <li class="testimonials__item">
                        <blockquote class="testimonials__blockquote">
                            <p class="testimonials__comment">{{ testimonial.comment }}</p>
                            <div class="testimonials__author">
                                <figure class="testimonials__avatar">
                                    <img src="{{ 'static/testimonials/' + testimonial.name | slug + '.jpg' }}" srcset="{{ '/static/testimonials/' + testimonial.name | slug + '@1.5x.jpg' }} 1.5x, {{ '/static/testimonials/' + testimonial.name | slug + '@2x.jpg' }} 2x" alt="{{ testimonial.name }}" loading="lazy" decoding="async">
                                </figure>
                                <p class="testimonials__text"><span class="testimonials__role">{{ testimonial.role }}</span><br><span class="testimonials__name">{{ testimonial.name }}</span> â€“ {{ testimonial.company }}</p>
                            </div>
                        </blockquote>
                    </li>
                {% endfor %}
            </ul>
        
    </section>
{% endif %}