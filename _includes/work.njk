---
layout: default
permalink: "/{{ title | slug }}/index.html"
---
<article>
    <header id="post-heading">
        <div class="t-container">
            <h1>{{ title }}</h1>
            {% if description %}
                <p class="h5">{{ description }}</p>
            {% endif %}
            {% include 'skills.njk' %}
        </div>
    </header>
    <div id="post-content">
        <div class="t-container">
            {{ content | safe }}
        </div>
    </div>
    {% include 'pagination.njk' %}
    {% include 'contact.njk' %}
</article>