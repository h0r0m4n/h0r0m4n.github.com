        @media (prefers-color-scheme: dark) {
            :root {
                --color-primary: #fff;
                --color-secondary: #a958ff;
                --color-tertiary: #51e1c0;
                --color-neutral-1: rgba(255, 255, 255, 0.5);
                --color-neutral-2: rgba(255, 255, 255, 0.25);
                --color-neutral-3: rgba(255, 255, 255, 0.12);
                --color-neutral-4: rgba(255, 255, 255, 0.06);
                --color-thumbnail-hover: rgba(255, 255, 255, 0.12);
                --color-overlay: rgba(13, 13, 13, 0.98);
                --color-background: #0d0d0d;
                --background: url(../static/bg-dark.svg);
            }
        }
    {% endif %}
