        --type-family-1a: 'ColfaxWebRegular', sans-serif;
        --type-family-1b: 'ColfaxWebBold', sans-serif;
        --type-family-2: 'KlavikaWebDisplayBlack', sans-serif;
        --type-family-3: 'Reenie Beanie', sans-serif;
        --type-height-1: 1.5;
        --type-height-2: 1;
        --type-height-3: 1.75;

        {# Sizing #}
        --size-xs: 0.5rem;
        --size-s: 1rem;
        --size-m: 1.5rem;
        --size-l: 2rem;
        --size-xl: 3rem;
        --size-xxl: 6rem;
        --size-xxxl: 10rem;

        {# Container #}
        --container-size: 50rem;

