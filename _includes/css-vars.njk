        --color-neutral-1: {% if css.neutral1 %}{{ css.neutral1 }}{% else %}rgba(13, 13, 13, 0.5){% endif %};
        --color-neutral-2: {% if css.neutral2 %}{{ css.neutral2 }}{% else %}rgba(13, 13, 13, 0.25){% endif %};
        --color-neutral-3: {% if css.neutral3 %}{{ css.neutral3 }}{% else %}rgba(13, 13, 13, 0.12){% endif %};
        --color-neutral-4: {% if css.neutral4 %}{{ css.neutral4 }}{% else %}rgba(13, 13, 13, 0.06){% endif %};
