<div id="testimonials" class="section">
    <div class="t-container">
        <h2>Testimonials</h2>
        {% if testimonials %}
            <ul>
                {% for testimonial in testimonials %}
                    <li>
                        <blockquote>
                            <p class="comment">{{ testimonial.comment }}</p>
                            <div class="testimonial">
                                <div class="avatar">
                                    <img src="{{ '/static/' + testimonial.name | slug + '.jpg' }}" srcset="{{ '/static/' + testimonial.name | slug + '@1.5x.jpg' }} 1.5x, {{ '/static/' + testimonial.name | slug + '@2x.jpg' }} 2x" alt="{{ testimonial.name }}" loading="lazy">
                                </div>
                                <p><strong>{{ testimonial.name }}</strong>, {{ testimonial.role }} at {{ testimonial.company }}</p>
                            </div>
                        </blockquote>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
</div>