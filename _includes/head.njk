<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="{% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}">
<meta name="keywords" content="{{ site.keywords }}">
<meta name="author" content="{{ site.author }}">
<meta name="robots" content="{% if layout == 'work' or layout == 'not-found' %}noindex, nofollow, noarchive, notranslate, noimageindex{% else %}nofollow, noarchive, notranslate, noimageindex{% endif %}">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-title" content="horoman.com">
<meta name="format-detection" content="telephone=no">
<meta name="mobile-web-app-capable" content="yes">
<meta name="pinterest-rich-pin" content="false">

{% if layout == 'default' %}
    {% include 'head-twitter.njk' %}
    {% include 'head-facebook.njk' %}
{% endif %}

<title>{% if title%}{{ site.title }} â€” {% if client %}{{ client }} {% endif %}{{ title }}{% else %}{{ site.title }}{% endif %}</title>

{% if layout == 'default' %}
    <link rel="canonical" href="{{ site.url | url }}">
{% endif %}

<link rel="apple-touch-icon" sizes="180x180" href="{{ site.url + '/apple-touch-icon.png' | url }}">
<link rel="icon" type="image/png" sizes="32x32" href="{{ site.url + '/favicon-32x32.png' | url }}">
<link rel="icon" type="image/png" sizes="16x16" href="{{ site.url + '/favicon-16x16.png' | url }}">
<link rel="manifest" href="{{ site.url + '/site.webmanifest' | url }}">
<link rel="mask-icon" href="{{ site.url + '/safari-pinned-tab.svg' | url }}" color="#fff">

{% include 'css-vars.njk' %}
<link rel="stylesheet" href="{{ '/css/style.css' | url }}?v={{ site.version }}">

{% if site.environment == "production" %}
    <script async data-no-cookie src="https://cdn.splitbee.io/sb.js"></script>
{% endif %} 